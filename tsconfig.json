{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "es7"]
  },
  "include": [
    "mock/**/*",
    "src/**/*",
    "typings.d.ts"
  ],
  "exclude": ["node_modules", "lib", "es"]
}
